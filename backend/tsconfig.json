{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017",
      "esnext",
      "esnext.asynciterable",
    ],
    "sourceMap": true,
    "target": "ES2017",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noStrictGenericChecks": true,
    "outDir": "./dist",
  },
  "compileOnSave": false,
  "include": [
    "src/**/*.ts", "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}